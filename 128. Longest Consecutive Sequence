import java.util.*;
public class Solution {
    public int longestConsecutive(int[] nums) {
        if (nums.length == 0) return 0;

        Set<Integer> numSet = new HashSet<>();
        for (int num : nums) {
            numSet.add(num);
        }
        int ls = 0;
        for (int num : numSet) {
            if (!numSet.contains(num - 1)) { 
           int cn = num;
                int cs = 1;
                while (numSet.contains(cn + 1)) {
                    cn += 1;
                    cs += 1;
                }
                ls = Math.max(ls, cs);
            }
        }
        return ls;
    }
}
