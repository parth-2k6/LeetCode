class Solution {
    public int findMaxConsecutiveOnes(int[] nums) {
        int m = 0;
        int curr = 0;
        for (int num : nums) {
            if (num == 1) {
                curr++;
            } else {
                if (curr > m) {
                    m = curr;
                }
                curr = 0;
            }
        }
       if (curr > m) {
            m = curr;
        }
        return m;
    }
}
